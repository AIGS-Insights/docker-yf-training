# Copy to .env and adjust as needed

# Required: your image (ACR or Docker Hub)
CONTAINER_IMAGE="repo_name/image_name:image_tag"

# Base naming
APP_NAME="appname"

# Optional defaults
# RESOURCE_GROUP defaults to: ${APP_NAME}-resource
# ENVIRONMENT_NAME defaults to: ${APP_NAME}-environment
# LOGWORKSPACE_NAME defaults to: ${APP_NAME}-logworkspace

LOCATION="centralus"
CONTAINER_COUNT=10

# Container sizing
CONTAINER_CPU=2.0
CONTAINER_MEMORY="4Gi"

# Optional: pin a specific storage account name (must be globally unique)
# STORAGE_ACCOUNT="storageabcd1234"

# Docker Hub private (only if using docker.io and private)
# REPO_USERNAME="myuser"
# REPO_PASSWORD="mypat_or_password"